    "tailwindcss": "^4.1.12",
    "turbo": "latest"
  },
  "packageManager": "npm@11.5.2",
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@google/gemini-cli": "^0.2.2",
    "bcryptjs": "^3.0.2",
    "daisyui": "^5.0.52",
    "lucide-react": "^0.542.0",
    "npm-run-all": "^4.1.5",
    "react-calendar": "^6.0.0",
    "react-clock": "^6.0.0",
    "react-icons": "^5.5.0"
  }
