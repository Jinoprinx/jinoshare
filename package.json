{
  "name": "jino",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "npm --workspace packages/api start",
    "lint": "turbo lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "heroku-postbuild": "npm --workspace packages/common run build && npm --workspace packages/ai run build && npm --workspace packages/api run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "tailwindcss": "^4.1.12",
    "turbo": "latest"
  },
  "packageManager": "npm@11.5.2",
  "dependencies": {
    "daisyui": "^5.0.52"
  }
}
